<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="10dp">

            <TextView
                android:id="@+id/totalShopLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/productImageIv"
                android:fontFamily="@font/muli_bold"
                android:text="T O T A L   S H O P S"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/productImageIv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_circle_white"
                android:padding="20dp"
                android:src="@drawable/ic_shops" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/totalShopsSfl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalShopLabelTv">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E7E7E7" />

                </androidx.cardview.widget.CardView>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/totalShopsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalShopLabelTv"
                android:fontFamily="@font/muli_bold"
                android:text=""
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="10dp">

            <TextView
                android:id="@+id/totalProductsLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/icon2Iv"
                android:fontFamily="@font/muli_bold"
                android:text="T O T A L   P R O D U C T S"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/icon2Iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_circle_white"
                android:padding="20dp"
                android:src="@drawable/ic_product" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/totalProductsSfl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalProductsLabelTv">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E7E7E7" />

                </androidx.cardview.widget.CardView>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/totalProductsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalProductsLabelTv"
                android:fontFamily="@font/muli_bold"
                android:text=""
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="10dp">

            <TextView
                android:id="@+id/totalUsersLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/icon3Iv"
                android:fontFamily="@font/muli_bold"
                android:text="T O T A L   U S E R S"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/icon3Iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_circle_white"
                android:padding="20dp"
                android:src="@drawable/ic_person_colour" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/totalUsersSfl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalUsersLabelTv">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E7E7E7" />

                </androidx.cardview.widget.CardView>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/totalUsersTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalUsersLabelTv"
                android:fontFamily="@font/muli_bold"
                android:text=""
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/totalRequestsRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/blue"
            android:padding="10dp">

            <TextView
                android:id="@+id/totalRequestsLabelTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/icon4Iv"
                android:fontFamily="@font/muli_bold"
                android:text="T O T A L   R E Q U E S T S"
                android:textColor="@color/white" />

            <ImageView
                android:id="@+id/icon4Iv"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/shape_circle_white"
                android:padding="5dp"
                android:src="@drawable/ic_request_icon" />

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/totalRequestsSfl"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalRequestsLabelTv">

                <androidx.cardview.widget.CardView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="3dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E7E7E7" />

                </androidx.cardview.widget.CardView>

            </com.facebook.shimmer.ShimmerFrameLayout>

            <TextView
                android:id="@+id/totalRequestsTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/totalRequestsLabelTv"
                android:fontFamily="@font/muli_bold"
                android:text=""
                android:textColor="@color/white"
                android:textSize="40sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>